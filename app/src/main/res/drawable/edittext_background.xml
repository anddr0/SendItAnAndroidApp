<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when EditText is focused -->
    <item android:state_focused="true" android:state_enabled="true">
        <shape>
            <solid android:color="#00FFFFFF"/>
            <stroke
                android:width="2dp"
                android:color="@color/md_theme_light_primaryContainer" /> <!-- Change the color to your desired primary color -->
            <corners android:radius="4dp"/>
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="#00FFFFFF"/>
            <stroke
                android:width="2dp"
                android:color="@color/border" />
            <corners android:radius="4dp"/>
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>
